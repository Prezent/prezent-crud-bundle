{% trans_default_domain config.translationDomain %}

{% if app.session %}
    {% for level, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="callout {{ level == 'error' ? 'alert' : level }}" data-closable>
                {{ message|trans }}
                <a class="close-button" data-close><i class="fa fa-times"></i></a>
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
