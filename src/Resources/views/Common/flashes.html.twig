{% trans_default_domain config.translationDomain %}

{% for level, messages in app.session.flashbag.all %}
    {% for message in messages %}
        <div class="callout alert-box {{ level == 'error' ? 'alert' : level }}" data-alert data-closable>
            {{ message|trans }}
            <a href="#" class="close close-button" data-close><i class="fa fa-times"></i></a>
        </div>
    {% endfor %}
{% endfor %}
